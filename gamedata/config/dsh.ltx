[dsh.gulag.override.gar_dram] ;бандиты и Юрик на Свалке
cond = {-gar_dm_novice_change_st}
;
;================================================================
[dsh.gulag.override.gar_smart_graveyard] ;Сталкеры на кладбище техники, в т.ч. Бес.
capacity = 10 ;7
communities = stalker, freedom
cond = {+gar_hellcar_dialog_end}, {+gar_hellcar_death} ;Не будем этот смарт закрывать.
;================================================================
[dsh.se_stalker.gar_hellcar.smart_terrains] ;Бес теперь останется на кладбище техники, и никуда оттуда не уйдёт.
gar_hellcar_group = {-gar_hellcar_dialog_end -gar_hellcar_death}
gar_smart_graveyard = {+gar_hellcar_dialog_end}
;================================================================
[dsh.se_stalker.gar_hellcar_group_1.smart_terrains] ;Команда Беса теперь останется на кладбище техники, и никуда оттуда не уйдёт.
gar_hellcar_group = {-gar_hellcar_dialog_end -gar_hellcar_death}
gar_smart_graveyard = {+gar_hellcar_dialog_end}, {+gar_hellcar_death}
;================================================================
[dsh.se_stalker.gar_hellcar_group_2.smart_terrains] ;Команда Беса теперь останется на кладбище техники, и никуда оттуда не уйдёт.
gar_hellcar_group = {-gar_hellcar_dialog_end -gar_hellcar_death}
gar_smart_graveyard = {+gar_hellcar_dialog_end}, {+gar_hellcar_death}
;================================================================
;
[dsh.gulag.override.gar_smart_garage] ;Сталкеры в ангаре. На них периодически нападают бандиты.
capacity = 12; 6
