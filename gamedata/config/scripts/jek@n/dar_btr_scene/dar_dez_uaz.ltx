[logic]
;active = ph_car@middle1
active = ph_car@walk
on_hit = hit

[hit]
on_info = %+dar_dez_uaz_lost%

[ph_car@walk]
path_walk       = dar_dez_uaz_walk
invulnerable	= true
headlights		= on
on_death_info   = dar_dez_uaz_dead
on_signal       = prepare_detonator | %+merc_signal_uaz%
on_signal2      = blow_bomb 		| %+merc_signal_detonate%
on_signal3      = spawn_btr 		| %+uaz_prepare_to_go%
on_signal4      = arrived 			| %+dar_dez_uaz_lost%
on_info 		= { +merc_signal_detonate +road_bomb_expl} ph_car@stop

[ph_car@middle1]
;target          = nil
path_walk       = dar_dez_btr_walk_middle_1
path_fire       = dar_dez_btr_walk_middle_2
invulnerable = true
headlights = on
on_death_info   = dar_dez_uaz_dead
on_signal       = arrived | ph_car@middle2 %+merc_signal_uaz%
;on_info = {+road_bomb_expl +merc_signal_detonate} ph_car@finish2, {+road_bomb_expl -merc_signal_uaz} ph_car@finish2

[ph_car@middle2]
;target          = 7056
;target          = nil
path_walk       = dar_dez_btr_walk_middle_2
path_fire       = dar_dez_btr_walk_finish_1
;auto_fire = true
;fire_range = 80
headlights = on
invulnerable = true
on_death_info   = dar_dez_uaz_dead
on_signal       = arrived | ph_car@finish1 %+merc_signal_detonate%
;on_info = { +merc_signal_detonate +road_bomb_expl} ph_car@stop, {+road_bomb_expl -merc_signal_uaz} ph_car@finish2


[ph_car@finish1]
;target          = 7056
path_walk       = dar_dez_btr_walk_finish_1
path_fire       = dar_dez_btr_walk_finish_2
;auto_fire = true
;fire_range = 60
headlights = on
;track_target = true
invulnerable = true
on_death_info   = dar_dez_uaz_dead
on_signal       = arrived | ph_car@finish2 %+uaz_prepare_to_go%
on_info = { +merc_signal_detonate +road_bomb_expl} ph_car@stop


[ph_car@finish2]
;target          = 7059
path_walk       = dar_dez_btr_walk_finish_2
path_fire       = dar_dez_btr_walk_finish_3
;auto_fire = true
;fire_range = 60
headlights = on
;track_target = true
invulnerable = true
on_death_info   = dar_dez_uaz_dead
on_signal       = arrived | ph_car@finish3


[ph_car@finish3]
;target          = actor
path_walk       = dar_dez_btr_walk_finish_3
path_fire       = dar_dez_btr_look
;auto_fire = true
;fire_range = 60
headlights = off
;track_target = false
invulnerable = true
on_death_info   = dar_dez_uaz_dead
on_signal       = arrived | %+dar_dez_uaz_lost%


[ph_car@stop]
;target          = 7059
;path_walk       = dar_dez_btr_stop
;path_fire       = dar_dez_btr_look
on_death_info   = dar_dez_uaz_dead
invulnerable = true
on_timer        = 6000 | ph_idle@idle %+uaz_spawn_desant%


[ph_idle@idle]
path_walk       = dar_dez_btr_stop
path_fire       = dar_dez_btr_look
target          = nil




