modified_params = nil
local function wpn_state_read_and_modify(base_class, self, packet, size)
	if modified_params then -- при наличии таблицы с данными для замены
		local params = {}
		local pk = get_netpk(self, 1)
		ASSERT( pk:isOk(), "can't read netpacket of %s", self:name() )
		pk:_read(params, packet) -- читаем из родного пакета данные
		--log3("[%s] data of [%s]: %s", script_name(), self:name(), params)
		for k,v in pairs(modified_params) do --Подменяем значения в определённых полях пакета
			params[k] = v
		end
		local fake_packet = net_packet() -- подменяем пакет
		fake_packet:w_begin(123) -- инициализируем позицию записи
		pk:_write(params, fake_packet) -- заполняем
		fake_packet:r_seek(2) -- ставим позицию чтения, учитываем ненужные два байта в начале от w_begin
		base_class.STATE_Read(self, fake_packet, fake_packet:w_tell()) -- читаем данные в объект из нашего поддельного
		modified_params = nil -- обнуляем табличку с исходными данными
	else
		base_class.STATE_Read(self, packet, size)
	end
end
------------------------------------------------------------------------
class "se_weapon" (cse_alife_item_weapon)
function se_weapon:__init (section) super (section)
end
function se_weapon:STATE_Read(packet, size)
	wpn_state_read_and_modify(cse_alife_item_weapon, self, packet, size)
end
