function modify_weapon(old, new)
	local it = db.actor:item_in_slot(2)
	if it then
		local s_cur_weapon = alife():object(it:id())
		local sect = it:section()
		-- спавним актору патроны, которые заряжены в ствол
		local cur_weapon_data = m_net_utils.get_weapon_data(s_cur_weapon)
		local ammo_sections = get_names(sect, "ammo_class") -- получаем список секций патронов
		local ammo_sec = ammo_sections[cur_weapon_data.ammo_type+1] -- и узнаём заряженную секцию
		ogse.spawn_ammo_in_inv(ammo_sec, cur_weapon_data.ammo_elapsed, db.actor)
		-- снимаем стандартные аддоны
		if ogse_addons.is_addon_installed(it, ogse_wpn_utils.addons_flags.scope) then
			local scope = get_string(sect, "scope_name", "")
			if scope ~= "" then
				ogse.spawn_item_in_inv(scope, db.actor)
			end
		end
		if ogse_addons.is_addon_installed(it, ogse_wpn_utils.addons_flags.gl) then
			local gl = get_string(sect, "grenade_launcher_name", "")
			if gl ~= "" then
				ogse.spawn_item_in_inv(gl, db.actor)
			end
		end
		if ogse_addons.is_addon_installed(it, ogse_wpn_utils.addons_flags.silencer) then
			local silencer = get_string(sect, "silencer_name", "")
			if silencer ~= "" then
				ogse.spawn_item_in_inv(silencer, db.actor)
			end
		end
		-- снимаем магазин, если есть
		local new_sect = sect
		local magazine =  get_string(sect, "magazine_name", "")
		if magazine ~= "" then
			ogse.spawn_item_in_inv(magazine, db.actor)
			new_sect = get_string(sect, "magazine_removed_section")
		end
		new_sect = string.gsub(new_sect, old, new)
		-- удаляем старый ствол
		db.actor:move_to_ruck(it)
		alife():release(s_cur_weapon, true)
		-- даем новый ствол
		relocate_item_section(db.actor, new_sect, "in")
	end
end

