-- -*- mode: lua; coding: windows-1251-dos -*-


function attach(sm)
	sm:subscribe({signal = "on_key_down", fun = this.on_key_down})
end

function on_key_down(key, bind)
	if GetLAlt() and key == DIK_keys.DIK_LSHIFT and level.main_input_receiver() then
		local lang = get_input_language()
		if lang == 0 then
			set_input_language(true)
		else
			set_input_language(false)
		end
	end
end
